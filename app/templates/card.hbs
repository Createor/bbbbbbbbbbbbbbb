<img {{bind-attr src=imageUrl}} class="img-responsive">
<div class="row">
  <div class="col-sm-6">
    <span>Name</span>
  </div>
  <div class="col-sm-6">
    <span>{{name}}</span>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <span>Mana cost</span>
  </div>
  <div class="col-sm-6">
    <span>{{manaCostFormatted}}</span>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <span>Card type</span>
  </div>
  <div class="col-sm-6">
    <span>{{type}}</span>
  </div>
</div>
{{#if powerToughnessFormatted}}
  <div class="row">
    <div class="col-sm-6">
      <span>P/T</span>
    </div>
    <div class="col-sm-6">
      <span>{{powerToughnessFormatted}}</span>
    </div>
  </div>
{{/if}}
<div class="row">
  <div class="col-sm-12">
    <p>{{text}}</p>
  </div>  
</div>

<div class="row">
  <div class="btn-group">
    <button {{bind-attr disabled=cannotAddToDeck}} {{action "addToMain" this}} class="btn btn-primary">Add</button>
    <button {{bind-attr disabled=cannotAddToDeck}} class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      {{fa-icon "caret-down"}}
    </button>
    <ul class="dropdown-menu">
      <li><a {{action "addToMain" this}}>Add to Main Deck</a></li>
      <li class="divider"></li>
      <li><a {{action "addToSide" this}}>Add to sideboard</a></li>
    </ul>
  </div>
  
  <div class="btn-group">
    <button {{bind-attr disabled=cannotRemoveFromMainDeck}} {{action "removeOneFromMain" this}} class="btn btn-warning">Remove</button>
    <button {{bind-attr disabled=cannotRemoveFromAnyDeck}} class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
      {{fa-icon "caret-down"}}
    </button>
    <ul class="dropdown-menu">
      {{#if canRemoveFromMainDeck}}
        <li><a {{action "removeOneFromMain" this}}>Remove one from Main Deck</a></li>
        <li><a {{action "removeAllFromMain" this}}>Remove all from Main Deck</a></li>
      {{/if}}
      {{#if canRemoveFromSideDeck}}
        <li class="divider"></li>
        <li><a {{action "removeOneFromSide" this}}>Remove one from sideboard</a></li>
        <li><a {{action "removeAllFromSide" this}}>Remove all from sideboard</a></li>
      {{/if}}
    </ul>
  </div>
</div>