<div {{bind-attr class=":row :row-offcanvas :row-offcanvas-left filtersActive:active"}}>
  <div class="col-sm-3 col-lg-1 sidebar-offcanvas" id="sidebar">
    {{card-filters
      typesSelected=typesSelected
      colorsSelected=colorsSelected
      legalitiesSelected=legalitiesSelected
    }}
  </div>
  <div class="col-sm-12 col-lg-11">
    <div class="col-sm-8">
      {{#paper-button raised=true classNames="md-primary" action="toggleFiltersActive"}}Toggle Filters{{/paper-button}}
      {{#full-height class="overflow-y-scroll" epsilon=34}}
        {{paper-text label="Name" value=searchTerm}}
        {{partial "cards/material-of-cards"}}
      {{/full-height}}
    </div>
    <div class="col-sm-4">
      {{outlet}}
    </div>
  </div>
</div>
