<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Search</label>
    <div class="col-sm-10">
      {{input type="text" value=controllers.cards.searchTerm class="form-control"}}
    </div>
  </div>
</form>
<table class="table table-striped table-bordered table-condensed table-ellipsible">
  <thead>
  <tr>
    <th class="col-sm-3">Name</th>
    <th class="col-sm-3">Set</th>
    <th class="col-sm-2">Mana</th>
    <th class="col-sm-3">Card Type</th>
    <th class="col-sm-1">P/T</th>
  </tr>
  </thead>
  <tbody>
  {{#each card in controllers.cards.displayCards}}
    <tr class="cursor-pointer" {{action "showCard" card}}>
      <td class="col-sm-3" {{bind-attr title=card.name}}>{{card.name}}</td>
      <td class="col-sm-3" {{bind-attr title=card.recentSet}}>{{card.recentSet}}</td>
      <td class="col-sm-2" {{bind-attr title=card.manaCostFormatted}}>{{card.manaCostFormatted}}</td>
      <td class="col-sm-3" {{bind-attr title=card.type}}>{{card.type}}</td>
      <td class="col-sm-1" {{bind-attr title=card.powerToughnessFormatted}}>{{card.powerToughnessFormatted}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
