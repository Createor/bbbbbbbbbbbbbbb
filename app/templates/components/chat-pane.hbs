{{#each chats as |chat|}}
  {{#chat-message classNames="md-3-line"}}
    <img src={{chat.avatarUrl}} class="chat-avatar md-avatar">
    <div class="md-list-item-text">
      <h3 class="chat-message-by">{{chat.name}} <small>{{x-ago date=chat.when}}</small></h3>
      <h3 class="chat-message-text">{{chat.says}}</h3>
    </div>
  {{/chat-message}}
{{/each}}
