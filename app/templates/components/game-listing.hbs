{{#paper-item class="md-3-line"}}

  {{!-- <div classNames="game-listing-matchup md-avatar">
    {{game-listing-player player=game.playerOne}}
    <span>vs.</span>
    {{game-listing-player player=game.playerTwo}}

    <span>{{game.watchers.length}} watching</span>
  </div> --}}

  <div class="md-list-item-text">
    <h3>{{game.playerOne.user.username}} vs. {{game.playerTwo.user.username}}</h3>
    <h4>{{game.watchers.length}} watching</h4>

    {{!-- {{paper-button classNames="md-primary" label="Join Game"}} --}}
    {{#paper-button icon-button=true param=game action="goToGame"}}
      {{paper-icon icon="launch"}}
    {{/paper-button}}

    {{#if canDeleteGame}}
      <ul class="pull-right paper-tile-content-right">
        <li>
          {{#x-paper-button-delayed
            action="deleteGame"
            params=game
            bubbles=false
            as |showTimer|}}
            {{paper-icon icon="delete" size="lg" title="Delete"}}
            {{#if showTimer}}
              {{donut-timer}}
            {{/if}}
          {{/x-paper-button-delayed}}
        </li>
      </ul>
    {{/if}}
  </div>

{{/paper-item}}
