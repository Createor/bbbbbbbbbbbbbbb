{{#paper-item}}

  <div classNames="game-listing-matchup md-avatar">
    {{game-listing-player player=game.playerOne}}
    <span>vs.</span>
    {{game-listing-player player=game.playerTwo}}

    <span>{{game.watchers.length}} watching</span>
  </div>

  <div class="md-list-item-text">
    {{#link-to 'game' game.id}}
      {{paper-button classNames="md-primary game-listing-join" label="Join Game"}}
    {{/link-to}}

    {{#if canDeleteGame}}
      <ul class="pull-right paper-tile-content-right">
        <li>
          {{#x-paper-button-delayed
            action="deleteGame"
            params=game
            bubbles=false
            as |showTimer|}}
            {{paper-icon icon="delete" size="lg" title="Delete"}}
            {{#if showTimer}}
              {{donut-timer}}
            {{/if}}
          {{/x-paper-button-delayed}}
        </li>
      </ul>
    {{/if}}
  </div>

{{/paper-item}}
