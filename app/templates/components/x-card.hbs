{{#paper-card}}
  {{x-card-image src=card.imageUrl}}
  {{#paper-card-content}}
    <h6>Name</h6>
    <p>{{card.name}}</p>
    <h6>Mana cost</h6>
    <p>{{mana-formatted mana=card.manaCostFormatted}}</p>
    <h6>Card type</h6>
    <p>{{card.type}}</p>
    {{#if card.powerToughnessFormatted}}
      <h6>P/T</h6>
      <p>{{card.powerToughnessFormatted}}</p>
    {{/if}}
    <h6>Price</h6>
    <p>{{promise-spinner url=card.channelFireballPrice}}</p>
    <p>{{card.text}}</p>
  {{/paper-card-content}}
{{/paper-card}}
