<div class="row row-offcanvas row-offcanvas-left {{if filtersActive 'active'}}">

  <div class="col-sm-3 col-lg-1 sidebar-offcanvas" id="sidebar">
    {{card-filters
      typesSelected=controllers.cards.types
      colorsSelected=controllers.cards.colors
      legalitiesSelected=controllers.cards.legalities
      typesChanged="typesChanged"
      colorsChanged="colorsChanged"
      legalitiesChanged="legalitiesChanged"
    }}
  </div>
  <div class="col-sm-12 col-lg-11">
    <div class="col-sm-5">
      {{#paper-button raised=true classNames="md-primary sm-display" action="toggleFiltersActive"}}Toggle Filters{{/paper-button}}
      {{#full-height classNames="overflow-y-scroll scrollable-paper-item"}}
        {{paper-text label="Name" value=nameSearch}}
        {{partial "cards/material-of-cards"}}
      {{/full-height}}
    </div>
    <div class="col-sm-2">
      {{#if selectedCard}}
        {{x-card card=selectedCard}}
        {{x-card-deck card=selectedCard
          deck=model
          addToMain="addToMain"
          addToSide="addToSide"
          removeOneFromMain="removeOneFromMain"
          removeAllFromMain="removeAllFromMain"
          removeOneFromSide="removeOneFromSide"
          removeAllFromSide="removeAllFromSide"
        }}
      {{/if}}
    </div>
    <div class="col-sm-5">
      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2"></label>
          <div class="col-sm-10">
            <div class="btn-group">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{fa-icon "cog"}}
                {{fa-icon "caret-down"}}
              </button>
              <ul class="dropdown-menu">
                <li><a {{action "openModal" "deck/export-modal" model}}>Export Deck</a></li>
                <li><a {{action "saveDeck" model}}>Save Deck</a></li>
              </ul>
            </div>
            <span>Deck Classification: <span>{{controllers.deck.model.classification}}</span></span>
          </div>
        </div>
        <div class="form-group">
          <label for="deck-name" class="col-sm-2 control-label">Deck name</label>
          <div class="col-sm-10">
            {{input class="form-control" id="deck-name" value=controllers.deck.model.name}}
          </div>
        </div>
        <div class="form-group">
          <label for="deck-comments" class="col-sm-2 control-label">Comments</label>
          <div class="col-sm-10">
            {{textarea class="form-control" id="deck-comments" rows="3" value=controllers.deck.model.comments}}
          </div>
        </div>
      </form>

      {{#if canShowDeckTable}}
        <div class="table-responsive">
          <table class="table table-condensed">
            <thead>
              <tr>
                <th class="col-sm-3">Number</th>
                <th class="col-sm-9">Card</th>
              </tr>
            </thead>
            <tbody>
              {{!-- Main Deck --}}
              {{#x-tr class="info cursor-pointer" action="showHide" param="mainDeck"}}
                <td>
                  <span>{{model.cards.length}}</span>
                  <i class="fa {{if canShowMainDeck 'fa-caret-down' 'fa-caret-up'}}"></i>
                </td>
                <td><strong>Maindeck</strong></td>
              {{/x-tr}}
              {{#if canShowMainDeck}}

                {{#each group in model.mainDeckGroupings itemController="deckTableItem"}}
                  {{#x-tr class="success cursor-pointer" action="showHide" param=group.model.superType}}
                    <td>
                      <span class="indent indent-1">{{group.model.numberOf}}</span>
                      <i class="fa {{if group.canShow 'fa-caret-down' 'fa-caret-up'}} indent indent-1"></i>
                    </td>
                    <td><strong>{{pluralize-string group.model.type}}</strong></td>
                  {{/x-tr}}
                  {{#if group.canShow}}
                    {{#each cardObj in group.model.cardObjs}}
                      {{#x-tr action="showCard" param=cardObj.card}}
                        <td>
                          <span class="indent indent-2">{{cardObj.count}}</span>
                        </td>
                        <td class="cursor-pointer">{{cardObj.card.name}}</td>
                      {{/x-tr}}
                    {{/each}}
                  {{/if}}
                {{/each}}

              {{/if}}

              {{!-- Sideboard --}}
              {{#if model.sideboard.length}}
                <tr></tr>
                {{#x-tr class="info cursor-pointer" action="showHide" param="sideDeck"}}
                  <td>
                    <span>{{model.sideboard.length}}</span>
                    <i class="fa {{if canShowSideDeck 'fa-caret-down' 'fa-caret-up'}}"></i>
                  </td>
                  <td><strong>Sideboard</strong></td>
                {{/x-tr}}

                {{#if canShowSideDeck}}

                  {{#each group in model.sideDeckGroupings itemController="deckTableItem"}}
                    {{#x-tr class="success cursor-pointer" action="showHide" param=group.model.superType}}
                      <td>
                        <span class="indent indent-1">{{group.model.numberOf}}</span>
                        <i {{bind-attr class=":fa group.canShow:fa-caret-down:fa-caret-up :indent :indent-1"}}></i>
                      </td>
                      <td><strong>{{pluralize-string group.model.type}}</strong></td>
                    {{/x-tr}}
                    {{#if group.canShow}}
                      {{#each cardObj in group.model.cardObjs}}
                        {{#x-tr action="showCard" param=cardObj.card}}
                          <td>
                            <span class="indent indent-2">{{cardObj.count}}</span>
                          </td>
                          <td class="cursor-pointer">{{cardObj.card.name}}</td>
                        {{/x-tr}}
                      {{/each}}
                    {{/if}}
                  {{/each}}

                {{/if}}
              {{/if}}
            </tbody>
          </table>
        </div>
      {{/if}}
    </div>
  </div>
</div>
