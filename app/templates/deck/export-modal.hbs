{{#x-modal action="close"}}
  <div class="modal-header">
    <button type="button" class="close" {{action "closeModal"}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Deck</h4>
  </div>
  <div class="modal-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-3">Contents</label>
        <div class="col-sm-9">
          {{textarea value=model.exportFormat rows=model.numberOfUniqueCardsInDeck}}
        </div>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    {{paper-button action="closeModal" label="Close"}}
  </div>
{{/x-modal}}
