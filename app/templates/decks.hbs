<div class="row">
  <div class="col-sm-5">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td class="col-sm-2">Name</td>
          <td class="col-sm-3">Set (Most Recent)</td>
          <td class="col-sm-3">Mana Cost</td>
          <td class="col-sm-2">Card Type</td>
          <td class="col-sm-2">P/T</td>
        </tr>
      </thead>
      <tbody>
        {{#each card in controllers.cards.displayCards}}
          <tr>
            <td class="col-sm-2">{{card.name}}</td>
            <td class="col-sm-3">{{card.recentSet}}</td>
            <td class="col-sm-3">{{card.manaCost}}</td>
            <td class="col-sm-2">{{card.type}}</td>
            <td class="col-sm-2">{{card.power}}/{{card.toughness}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>