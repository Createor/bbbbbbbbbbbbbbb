{{#x-modal action="close"}}
  <div class="modal-header">
    <button type="button" class="close" {{action "closeModal"}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Create Token</h4>
  </div>
  <div class="modal-body">
    <form class="form-horizontal form-horizontal-centered">
      <div class="form-group">
        <div class="col-sm-12">
          {{paper-text label="Name" value=name}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          {{paper-text label="Power" value=power}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          {{paper-text label="Toughness" value=toughness}}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          {{paper-text label="Description" value=description}}
        </div>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    {{paper-button action="closeModal" label="Cancel"}}
    {{paper-button raised=true class="md-primary" action="createToken" label="Create"}}
  </div>
{{/x-modal}}
