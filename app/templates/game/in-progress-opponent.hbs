{{#game-board-container}}

  {{game/battle-field
    gameCards=playerTwo.cardsInBattlefield
    player=playerTwo
    cards=cardsInDecks
    bottomBattlefield=false
    readOnly=true
    }}

  {{#game-zones}}

    {{game-zone
      title="Hand"
      gameCards=playerTwo.cardsInHand
      class="right"
      readOnly=notPlayerOne
      canOpen=false}}

    {{game-zone
      title="Library"
      gameCards=playerTwo.cardsInLibrary
      class="right"
      readOnly=notPlayerOne
      canOpen=false}}

    {{game-zone
      title="Graveyard"
      gameCards=playerTwo.cardsInGraveyard
      class="right"
      open="openLeftColumn"
      player=playerTwo
      readOnly=notPlayerOne}}

    {{game-zone
      title="Exile"
      gameCards=playerTwo.cardsInExile
      class="right bottom"
      open="openLeftColumn"
      player=playerTwo
      readOnly=notPlayerOne}}
  {{/game-zones}}
{{/game-board-container}}
