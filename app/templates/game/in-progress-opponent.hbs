{{#game-board-container}}

  {{game/battle-field}}

  {{#game-zones}}

    {{game-zone
      title="Hand"
      gameCards=playerTwo.cardsInHand
      class="right"
      canOpen=false}}

    {{game-zone
      title="Library"
      gameCards=playerTwo.cardsInLibrary
      class="right"
      canOpen=false}}

    {{game-zone
      title="Graveyard"
      gameCards=playerTwo.cardsInGraveyard
      class="right"
      open="openLeftColumn"
      player=playerTwo
      top=true}}

    {{game-zone
      title="Exile"
      gameCards=playerTwo.cardsInExile
      class="right bottom"
      open="openLeftColumn"
      player=playerTwo
      top=true}}
  {{/game-zones}}
{{/game-board-container}}
