<div class="game-left-column">
  <h3>{{player.user.username}} - {{zone}}</h3>
  {{#paper-button class="close-column" action="closeLeftColumn"}}
    {{paper-icon icon="close"}}
  {{/paper-button}}

  {{#each model as |card|}}
    {{game-card
      cards=controllers.game.cardsInDecks
      gameCard=card
      dragStarted="dragStarted"
      dragEnded="dragEnded"
    }}
  {{/each}}
</div>
